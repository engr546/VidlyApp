@model Vidly.ViewModels.MovieFormViewModel

@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title</h2>

@using (Html.BeginForm("Save", "Movies", FormMethod.Post, new { @class = "form-horizontal" }))
{
    // Name
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.Name):
        @Html.TextBoxFor(m => m.Movie.Name, new { @class = "form-control", placeholder = "Jane Doe" })
    </div>

    // Release Data
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.ReleaseDate):
        <div class="input-group date" data-provide="datepicker">
            @Html.TextBoxFor(m => m.Movie.ReleaseDate, "{0: MM/d/yyyy}", new { @class = "form-control", placeholder = "mm/dd/yyyy" })
            <div class="input-group-addon">
                <i class="fa fa-calendar" style="margin: 8px 10px; font-size: 20px" aria-hidden="true"></i>
            </div>
        </div>
    </div>

    // Genre
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.GenreTypeId):
        @Html.DropDownListFor(m => m.Movie.GenreTypeId, new SelectList(Model.GenreTypes, "Id", "Name"), "Select Genre Type", new { @class = "form-control" })
    </div>

    // Number in Stock
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.Stocks):
        @Html.TextBoxFor(m => m.Movie.Stocks, new { @class = "form-control", placeholder = "100" })
    </div>

    // Hidden Field
    @Html.HiddenFor(m => m.Movie.Id);

    // Save
    <button type="submit" class="btn btn-success">Save</button>
}

<script>
    $('.datepicker').datepicker({
        format: 'mm/dd/yyyy',
        startDate: '-3d'
    });
</script>