@model Vidly.Models.Customer


@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>Membership Type: @Model.MembershipType.Name</li>
    @if (Model.Birthdate != null)
    {
        <li>Birthdate: @Model.Birthdate.GetValueOrDefault().ToShortDateString()</li>
    }
</ul>

<button type="button" class="btn btn-success"> @Html.ActionLink("Edit", "Edit", "Customers", new { id = Model.Id }, null)</button>