@model Vidly.Models.Customer
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>

@using (Html.BeginForm("Create", "Customers", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="form-group">
        @Html.LabelFor(c => c.Name)
        @Html.TextBoxFor(c => c.Name, new { @class = "form-control", placeholder = "Jane Doe" })
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.Birthdate)
        <div class="input-group date" data-provide="datepicker">
            @Html.TextBoxFor(c => c.Birthdate, new { @class = "form-control", placeholder = "mm/dd/yyyy" })
            <div class="input-group-addon">
                <i class="fa fa-calendar" style="font-size: 30px" aria-hidden="true"></i>
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-success">Send invitation</button>
}

<script>
    $('.datepicker').datepicker({
        format: 'mm/dd/yyyy',
        startDate: '-3d'
    });
</script>