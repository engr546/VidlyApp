@model Vidly.Models.Customer
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>

@using (Html.BeginForm("Create", "Customers", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="form-group">
        @Html.LabelFor(c => c.Name):
        @Html.TextBoxFor(c => c.Name, new { @class = "form-control", placeholder = "Jane Doe" })
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.Birthdate):
        <div class="input-group date" data-provide="datepicker">
            @Html.TextBoxFor(c => c.Birthdate, new { @class = "form-control", placeholder = "mm/dd/yyyy" })
            <div class="input-group-addon">
                <i class="fa fa-calendar" style="margin: 8px 10px; font-size: 20px" aria-hidden="true"></i>
            </div>
        </div>
    </div>

    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m => m.IsSubscribeToNewsLetter) Subscribed to Newsletter?
        </label>
    </div>

    <button type="submit" class="btn btn-success">Submit</button>
}

<script>
    $('.datepicker').datepicker({
        format: 'mm/dd/yyyy',
        startDate: '-3d'
    });
</script>